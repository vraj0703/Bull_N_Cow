<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <raj.bullncow.util.CTextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:text="developed By"
        android:textSize="15sp" />

    <raj.bullncow.util.CTextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Vishal Raj"
        android:textSize="20sp"
        app:typeface="bold" />

    <com.andexert.library.RippleView
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footer_about"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_marginTop="10sp"
        android:layout_weight="1"
        android:gravity="center"
        app:rv_rippleDuration="200"
        ripple:rv_color="@color/primary_color"
        ripple:rv_type="doubleRipple">

        <raj.bullncow.util.CTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rate this app"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            app:typeface="dash" />
    </com.andexert.library.RippleView>

    <raj.bullncow.util.CTextView
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/four"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="App uses following API"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/footer_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_margin="20sp"
        android:orientation="horizontal">

        <com.andexert.library.RippleView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            app:rv_rippleDuration="200"
            ripple:rv_color="@color/primary_color"
            ripple:rv_type="doubleRipple">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            app:rv_rippleDuration="200"
            ripple:rv_color="@color/primary_color"
            ripple:rv_type="doubleRipple">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fb" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            app:rv_rippleDuration="200"
            ripple:rv_color="@color/primary_color"
            ripple:rv_type="doubleRipple">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail" />
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:id="@+id/git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            app:rv_rippleDuration="200"
            ripple:rv_color="@color/primary_color"
            ripple:rv_type="doubleRipple">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_git" />
        </com.andexert.library.RippleView>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/three"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp">

            <raj.bullncow.util.CTextView
                android:id="@+id/credit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="-https://github.com/JakeWharton/NineOldAndroids\n\n-com.github.jorgecastilloprz: expandablepanel\n\n-com.github.traex.rippleeffect\n\n-me.relex:circleindicator\n\n-Font Quicksand Family\n\n-Graphics flaticon.com\n\n-Sound freesound.org" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
