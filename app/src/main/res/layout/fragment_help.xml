<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <raj.bullncow.util.CTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulls and Cows is an old code-breaking mind or paper and pencil game for two or more players.\nPlayers take turns in trying to guess each other's word."
                android:textSize="15sp"
                app:typeface="italic" />


            <raj.bullncow.util.CTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="Droid generate a N digit number and the Player tries to guess it.\nAt each turn the Player tries a N digit number, and the Droid displays how close it is to the answer by giving:\n\n1)\tThe number of Bulls - digits correct in the right position.\n2)\t The number of Cows - digits correct but in the wrong position.\n\nPlayer tries to guess the answer in the fewest number of turns."
                android:textSize="17sp"
                app:typeface="bold" />

            <raj.bullncow.util.CTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="Droid cannot generate number with repeated digits and 0 in it.\n\nBulls are counted before Cows."
                android:textSize="15sp"
                app:typeface="bold_italic" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
